<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,
        th,
        td {
            border: 2px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        
        .btn-edit {
            cursor: pointer;
            text-align: center;
            border-radius: 3px;
            background-color: rgba(33, 7, 228, 0.581);
            border-color: rgb(0, 0, 0);
            color: rgb(249, 248, 248);
            margin-right: 15px;
            padding: 1px 17px;
        }
        
        .btn-delete {
            cursor: pointer;
            text-align: center;
            background-color: rgba(255, 2, 15, 0.727);
            border-radius: 2px;
            border-color: rgb(0, 4, 3);
            color: rgb(0, 0, 0);
            padding: 1px 17px;
            border-radius: 3px;
        }
    </style>
</head>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>address</th>
            <th>PhoneNumber</th>
            <th>Actions</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>

                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phoneNumber %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit </a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete </a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>